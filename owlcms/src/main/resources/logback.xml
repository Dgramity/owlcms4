<configuration scan="true" debug="false">

	<appender name="STDERR"
		class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} %X{currentGroup}.%X{view} - %-5level %-75msg [%class{100}:%L %M]%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.ledocte.owlcms" level="INFO" />

	<!-- silence spurious warning messages -->
	<logger name="org.eclipse.jetty.annotations.AnnotationParser" level="ERROR" />
	<logger name="org.eclipse.jetty.server.HttpChannel" level="ERROR" />
	<logger name="com.vaadin.flow.server.communication.JSR356WebsocketInitializer" level="ERROR" />
	<logger name="com.vaadin.flow.server.DefaultDeploymentConfiguration" level="ERROR" />

	<root level="WARN">
		<appender-ref ref="STDERR" />
	</root>

</configuration>
