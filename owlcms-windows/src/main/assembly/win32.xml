<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>win32</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${jre.directory}</directory>
			<outputDirectory>jre</outputDirectory>
			<includes>
				<include>bin**/**</include>
				<include>lib**/**</include>
				<include>conf**/**</include>
			</includes>
		</fileSet>
        <!--  we do not copy /local and other items, they are extracted from the dependencies -->
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/src/main/assembly/owlcms.l4j.ini</source>
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
		</file>
        <file>
            <source>${project.basedir}/src/main/assembly/demo-owlcms.l4j.ini</source>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </file> 
        <file>
            <source>${project.basedir}/../owlcms/src/main/resources/logback.xml</source>
            <outputDirectory>classes</outputDirectory>
            <filtered>true</filtered>
        </file>         
	</files>
</assembly>