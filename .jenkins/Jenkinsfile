pipeline {
    agent any
    
    tools { 
        maven '3.6.2' 
        jdk 'jdk8' 
    }
    
    environment {
        // maven profile to select destination repository (release|prerelease)
        RELEASE = 'prerelease'
        M2 = 'c:/dev/.m2'
    }
                    
    stages {
        stage('Update git & submodules') {
            steps {
                bat 'git config --global user.email "jf@jflamy.dev"'
                bat 'git config --global user.name "Jean-Fran√ßois Lamy"'

                bat 'git pull origin develop'
                bat 'git checkout develop'
                bat 'git pull'

                dir('owlcms-publicresults/..') {
                    // clone the submodules
                    bat 'git submodule update --init --recursive'
                    // don't trust the commit pointer, hard reset to master
                    bat 'git submodule foreach "git fetch && git reset --hard origin/master"'
                }

            }
        }
        
        stage('Build owlcms') {
            steps {
                dir('owlcms') {
                    bat 'mvn -s %M2%/settings.xml -B clean package -P production,signing'
                }
            }
        }
        stage('Build publicresults') {
            steps {
                dir('publicresults') {
                    bat 'mvn -s %M2%/settings.xml -B clean install -P production'
                }
            }
        }
        stage('Build owlcms-publicresults wrapper') {
            steps {
                dir('owlcms-publicresults') {
                    bat 'mvn -s %M2%/settings.xml -B clean package'
                }
            }
        }
        
        stage('Deploy publicresults to bintray') {
            steps {
                dir('publicresults') {
                    bat 'mvn -s %M2%/settings.xml -B deploy:deploy-file@deploy-file'
                }
            }
        }
        
        stage('Release owlcms to github') {
            steps {
                dir('.') {
                    bat 'mvn -B gitflow:release -P %RELEASE%'
                }
            }
        }
    }
}