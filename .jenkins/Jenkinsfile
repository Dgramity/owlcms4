pipeline {
    agent any
    tools { 
        maven '3.6.2' 
        jdk 'jdk8' 
    }
    
    environment {
        M2 = 'c:/dev/.m2'
    }
                    
    stages {
        stage('Update git & submodules') {
            steps {
                bat 'git config --global user.email "jf@jflamy.dev"'
                bat 'git config --global user.name "Jean-Fran√ßois Lamy"'
                
                bat 'git checkout develop'
                bat 'git pull'

                dir('owlcms-publicresults/..') {
                    bat 'git submodule update --init --recursive'
                    bat 'git submodule foreach "git fetch && git reset --hard origin/master"'
                }

            }
        }
        
        stage('Build owlcms') {
            steps {
                dir('owlcms') {
                    bat 'mvn -B clean package'
                }
            }
        }
        stage('Build publicresults') {
            steps {
                dir('publicresults') {
                    bat 'mvn -B clean install'
                }
            }
        }
        stage('Build owlcms-publicresults wrapper') {
            steps {
                dir('owlcms-publicresults') {
                    bat 'mvn -B clean package'
                }
            }
        }
        
        stage('Deploy publicresults to bintray') {
            steps {
                dir('publicresults') {
                    bat 'mvn --settings %M2%/settings.xml -B deploy:deploy-file@deploy-file'
                }
            }
        }
        
        stage('Release owlcms to github') {
            steps {
                dir('.') {
                    bat 'mvn -B gitflow:release'
                }
            }
        }
    }
}