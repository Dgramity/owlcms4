//                    bat 'git pull'
//                    // the build does not create any files
//                    //bat 'git add -A'
//                    //bat 'git commit -m "successful build"'
//                    bat 'git checkout master'
//                    // bring back the updated pom with the correct version numbers
//                    bat 'git merge develop'
//                    // the build does not create any files
//                    //bat 'git commit -m "successful build merged to master"'
//                    bat 'git push https://%TOKEN%@github.com/jflamy/owlcms-publicresults.git'
//                }
//            }
//        }

        // keep this stage for last because gitflow:release updates the project version numbers
        stage('Release owlcms to github') {
            steps {
                dir('.') {
                    bat 'git checkout develop'
                    bat 'git pull'
                    bat 'mvn -s %M2%/settings.xml -B gitflow:release github-release:github-release -P %RELEASE%'
                }
            }
        }
        

    }
}